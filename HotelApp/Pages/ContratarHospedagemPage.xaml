<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="HotelApp.Pages.ContratarHospedagemPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="ContratarHospedagemPage"
    BackgroundColor="{StaticResource Black}">
    <VerticalStackLayout Padding="10" VerticalOptions="Center">
        <Label
            FontFamily="AsapCondensedRegular"
            FontSize="30"
            HorizontalOptions="Center"
            Text="Cálculo da diária"
            TextColor="{StaticResource PrimaryDark}" />
        <Border Padding="10">
            <VerticalStackLayout>
                <Grid>
                    <Grid.RowSpacing>5</Grid.RowSpacing>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Label
                        Grid.Row="0"
                        Grid.Column="0"
                        Text="Adultos:"
                        VerticalOptions="Center" />
                    <Label
                        x:Name="lblQuantidadeAdultos"
                        Grid.Row="0"
                        Grid.Column="1"
                        BindingContext="{x:Reference stpAdultos}"
                        HorizontalOptions="Center"
                        Text="{Binding Value}"
                        TextColor="{StaticResource PrimaryDark}"
                        VerticalOptions="Center" />
                    <Stepper
                        x:Name="stpAdultos"
                        Grid.Row="0"
                        Grid.Column="2"
                        HorizontalOptions="End"
                        Increment="1"
                        Maximum="10"
                        Minimum="0"
                        VerticalOptions="Center" />

                    <Label
                        Grid.Row="1"
                        Grid.Column="0"
                        Text="Crianças:" />
                    <Label
                        x:Name="lblQuantidadeCriancas"
                        Grid.Row="1"
                        Grid.Column="1"
                        BindingContext="{x:Reference stpCriancas}"
                        HorizontalOptions="Center"
                        Text="{Binding Value}"
                        TextColor="{StaticResource PrimaryDark}"
                        VerticalOptions="Center" />
                    <Stepper
                        x:Name="stpCriancas"
                        Grid.Row="1"
                        Grid.Column="2"
                        HorizontalOptions="End"
                        Increment="1"
                        Maximum="10"
                        Minimum="0"
                        VerticalOptions="Center" />

                    <Label
                        Grid.Row="2"
                        Grid.Column="0"
                        Grid.ColumnSpan="3"
                        FontFamily="AsapCondensedRegular"
                        FontSize="20"
                        HorizontalTextAlignment="Center"
                        Text="Escolha uma suíte"
                        TextTransform="Uppercase" />

                    <Picker
                        Title="Selecione sua suite"
                        Grid.Row="3"
                        Grid.Column="1">
                        <Picker.Items>
                            <x:String>Suite Super Luxo</x:String>
                            <x:String>Suite Luxo</x:String>
                            <x:String>Suite Single</x:String>
                            <x:String>Suite Crise</x:String>
                        </Picker.Items>
                    </Picker>

                    <Label
                        Grid.Row="4"
                        Grid.Column="0"
                        Grid.ColumnSpan="3"
                        FontFamily="AsapCondensedRegular"
                        FontSize="20"
                        HorizontalTextAlignment="Center"
                        Text="Período de estadia"
                        TextTransform="Uppercase" />

                    <Border
                        Grid.Row="5"
                        Grid.ColumnSpan="3"
                        Padding="10"
                        StrokeShape="8">
                        <HorizontalStackLayout>
                            <Label
                                FontFamily="AsapCondensedRegular"
                                FontSize="14"
                                Text="Check-in"
                                TextTransform="Uppercase"
                                VerticalTextAlignment="Center" />
                            <DatePicker HorizontalOptions="Center" />
                        </HorizontalStackLayout>
                    </Border>
                    <Border
                        Grid.Row="6"
                        Grid.ColumnSpan="3"
                        Padding="10"
                        StrokeShape="8">
                        <HorizontalStackLayout>
                            <Label
                                FontFamily="AsapCondensedRegular"
                                FontSize="14"
                                Text="Check-out"
                                TextTransform="Uppercase"
                                VerticalTextAlignment="Center" />
                            <DatePicker HorizontalOptions="Center" />
                        </HorizontalStackLayout>
                    </Border>
                </Grid>
            </VerticalStackLayout>
        </Border>
    </VerticalStackLayout>
</ContentPage>