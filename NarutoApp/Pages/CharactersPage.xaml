<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="NarutoApp.Pages.CharactersPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:model="clr-namespace:NarutoApp.Models"
    xmlns:vm="clr-namespace:NarutoApp.ViewModels"
    Title="CharactersPage"
    x:DataType="vm:CharactersPageViewModel"
    Shell.NavBarIsVisible="False">

    <ContentPage.Background>
        <Color>#242424</Color>
    </ContentPage.Background>

    <CollectionView
        x:Name="clvCharacters"
        x:DataType="vm:CharactersPageViewModel"
        ItemSizingStrategy="MeasureFirstItem"
        ItemsLayout="VerticalGrid,2"
        ItemsSource="{Binding Characters}"
   
        RemainingItemsThreshold="5"
        RemainingItemsThresholdReachedCommand="{Binding LoadCharactersCommand}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Border
                    Margin="5"
                    Padding="16"
                    x:DataType="model:Character"
                    BackgroundColor="#2A2A2A"
                    Stroke="Transparent"
                    StrokeShape="18"
                    VerticalOptions="Center">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Border
                            Grid.Row="0"
                            Grid.Column="0"
                            Background="#505050"
                            HeightRequest="108"
                            StrokeShape="18">
                            <Image Aspect="Fill" Source="{Binding FistImage}" />
                        </Border>
                        <Label
                            Grid.Row="1"
                            Grid.Column="0"
                            FontAttributes="Bold"
                            FontSize="16"
                            Text="{Binding name}"
                            TextColor="White" />
                        <Label
                            Grid.Row="2"
                            Grid.Column="0"
                            FontSize="13"
                            Text="{Binding personal.clan}"
                            TextColor="{StaticResource Gray100}" />
                    </Grid>
                </Border>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>