<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="NarutoApp.Pages.Home"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Home">
    <ContentPage.Background>
        <Color>#ffffff</Color>
    </ContentPage.Background>
    <ScrollView>
        <VerticalStackLayout Padding="10" Spacing="10">
            <Label
                FontAttributes="Bold"
                HorizontalOptions="Start"
                Text="Navegar pelos personagens"
                VerticalOptions="Center" />
            <CollectionView x:Name="clvCharacters" ItemsLayout="VerticalGrid,2">
                <CollectionView.ItemTemplate>
                    <DataTemplate>

                        <Border
                            Padding="18"
                            Shadow=""
                            MaximumHeightRequest="213"
                            MaximumWidthRequest="198"
                            StrokeShape="18">
                            <VerticalStackLayout VerticalOptions="Start">
                                <Border
                                    Background="Black"
                                    HeightRequest="200"
                                    Stroke="#E1EAEF"
                                    StrokeShape="18">
                                    <Image Aspect="AspectFit" Source="{Binding firsImage}" />
                                </Border>
                                <Label
                                    FontAttributes="Bold"
                                    FontSize="Small"
                                    Text="{Binding name}"
                                    TextColor="Black" />
                            </VerticalStackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>