<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ConsumoPessoalAguaApp.Pages.HomePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="HomePage"
    BackgroundColor="{StaticResource PrimaryCustom}"
    NavigationPage.HasNavigationBar="False">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border
            Grid.Row="2"
            Grid.ColumnSpan="4"
            Margin="0,0,0,0"
            Padding="20"
            Background="White">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="32,32,0,0" />
            </Border.StrokeShape>
            <FlexLayout
                Padding="0,30,0,0"
                AlignContent="SpaceBetween"
                Direction="Column"
                JustifyContent="SpaceBetween">
                <Label
                    FontAttributes="Bold"
                    FontSize="Medium"
                    HorizontalOptions="Center"
                    Text="Calcule seu consumo ideal de água por dia"
                    TextColor="{StaticResource PrimaryCustom}"
                    TextTransform="Uppercase"
                    Visual="Default" />
                <Entry
                    FontSize="18 "
                    Keyboard="Numeric"
                    Placeholder="Insira seu peso ex: 65,5."
                    TextColor="{StaticResource PrimaryCustom}"
                    Visual="Default" />
                <VerticalStackLayout>
                    <RadioButton
                        Content="Adulto"
                        TextColor="{StaticResource PrimaryCustom}"
                        Value="1" />
                    <RadioButton
                        Content="Criança/Adolecente"
                        TextColor="{StaticResource PrimaryCustom}"
                        Value="0" />
                </VerticalStackLayout>
                <Button
                    Margin="0,0,0,20"
                    Padding="24,12,24,12"
                    BackgroundColor="{StaticResource PrimaryCustom}"
                    FontAttributes="Bold"
                    FontSize="18"
                    HorizontalOptions="Center"
                    Text="Calcular"
                    TextColor="White" />
            </FlexLayout>
        </Border>
    </Grid>
</ContentPage>